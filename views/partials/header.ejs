    <script>
        function toggleMenu() {
            const menu = document.querySelector('#mobile-menu');
            const isHidden = menu.classList.contains('hidden');
            if (isHidden) {
                menu.classList.remove('hidden');
                menu.classList.add('block');
            } else {
                menu.classList.add('hidden');
                menu.classList.remove('block');
            }
        }
    </script>

<%- include('../partials/header.ejs') %>

<div class="bg-white py-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
        <h1 class="text-4xl font-bold text-gray-900 mb-8">Contact Us</h1>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12">
            <div class="order-2 lg:order-1">
                <h2 class="text-xl sm:text-2xl font-semibold text-gray-900 mb-4">Get in Touch</h2>
                <p class="text-gray-600 mb-6">We're here to help! Feel free to reach out to us with any questions, concerns, or feedback.</p>
                
                <div class="space-y-4">
                    <div>
                        <h3 class="font-medium text-gray-900">Email</h3>
                        <p class="text-gray-600">support@lumistay.com</p>
                    </div>
                    
                    <div>
                        <h3 class="font-medium text-gray-900">Phone</h3>
                        <p class="text-gray-600">+1 (555) 123-4567</p>
                    </div>
                    
                    <div>
                        <h3 class="font-medium text-gray-900">Office Hours</h3>
                        <p class="text-gray-600">Monday - Friday: 9:00 AM - 6:00 PM EST</p>
                    </div>
                </div>
            </div>
            
            <div class="order-1 lg:order-2">
                <form class="space-y-6 bg-gray-50 p-6 rounded-lg shadow-sm">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                        <input type="text" id="name" name="name" class="mt-1 block w-full px-4 py-3 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 bg-white">
                    
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                        <input type="email" id="email" name="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                    </div>
                    
                    <div>
                        <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
                        <textarea id="message" name="message" rows="4" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"></textarea>
                    </div>
                    
                    <button type="submit" class="w-full bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>

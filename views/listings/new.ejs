<div class="bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-2xl md:text-3xl font-semibold text-center mb-8">Create Your New List</h1>
        
        <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-lg p-6 md:p-8">
            <form action="/listing/create" id="signupForm" enctype="multipart/form-data" method="post" class="space-y-6">

                 Title Field 
    <div>
        <label class="block text-lg md:text-2xl font-semibold mb-2" for="title">Title</label>
        <input type="text" id="title" required
            class="w-full rounded-lg p-3 border border-gray-200 shadow-sm h-12 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
            name="list[title]" placeholder="Title">
        <div class="error-message hidden mt-1 text-sm text-red-600"></div>
        <div class="success-message hidden mt-1 text-sm text-green-600"></div>
    </div>

    <!-- Description Field -->
    <div>
        <label class="block text-lg md:text-2xl font-semibold mb-2" for="description">Description</label>
        <textarea name="list[description]" id="description" required
            class="w-full rounded-lg p-3 border border-gray-200 shadow-sm min-h-[120px] focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors resize-vertical"
            placeholder="Description"></textarea>
        <div class="error-message hidden mt-1 text-sm text-red-600"></div>
        <div class="success-message hidden mt-1 text-sm text-green-600"></div>
    </div>

    <!-- Category Field -->
    <div>
        <label class="block text-lg md:text-2xl font-semibold mb-2" for="category">Category</label>
        <select name="list[category]" required id="category" 
            class="w-full rounded-lg p-3 border border-gray-200 shadow-sm h-12 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors appearance-none bg-white">
            <option value="">Select a category</option>
            <option value="Trending">Trending</option>
            <option value="Iconic Cities">Iconic Cities</option>
            <option value="Mountains">Mountains</option>
            <option value="Amazing Pools">Amazing Pools</option>
            <option value="Camping">Camping</option>
            <option value="Arctic">Arctic</option>
            <option value="Castle">Castle</option>
            <option value="Rooms">Rooms</option>
            <option value="Dome">Dome</option>
            <option value="Farm">Farm</option>
        </select>
        <div class="error-message hidden mt-1 text-sm text-red-600"></div>
        <div class="success-message hidden mt-1 text-sm text-green-600"></div>
    </div>

    <!-- Price and Country Fields -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
        <!-- Price Field -->
        <div>
            <label class="block text-lg md:text-2xl font-semibold mb-2" for="price">Price</label>
            <input type="text" name="list[price]" required id="price"
                class="w-full rounded-lg p-3 border border-gray-200 shadow-sm h-12 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
                placeholder="1200">
            <div class="error-message hidden mt-1 text-sm text-red-600"></div>
            <div class="success-message hidden mt-1 text-sm text-green-600"></div>
        </div>

        <!-- Country Field -->
        <div>
            <label class="block text-lg md:text-2xl font-semibold mb-2" for="country">Country</label>
            <input type="text" name="list[country]" required id="country"
                class="w-full rounded-lg p-3 border border-gray-200 shadow-sm h-12 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
                placeholder="India">
            <div class="error-message hidden mt-1 text-sm text-red-600"></div>
            <div class="success-message hidden mt-1 text-sm text-green-600"></div>
        </div>
    </div>

    <!-- Image Upload Field -->
    <div>
        <h2 class="text-lg md:text-2xl font-semibold mb-2">Upload List Image</h2>
        <label for="file-input" class="sr-only">List Image</label>
        <input type="file" name="list[image]" id="file-input" class="block w-full border border-gray-200 shadow-sm rounded-lg text-sm focus:z-10 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none 
                        file:bg-gray-50 file:border-0 file:me-4 file:py-3 file:px-4 file:rounded-l-lg">
    </div>

    <!-- Location Field -->
    <div>
        <label class="block text-lg md:text-2xl font-semibold mb-2" for="location">Location</label>
        <input type="text" name="list[location]" required id="location"
            class="w-full rounded-lg p-3 border border-gray-200 shadow-sm h-12 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
            placeholder="Delhi">
        <div class="error-message hidden mt-1 text-sm text-red-600"></div>
        <div class="success-message hidden mt-1 text-sm text-green-600"></div>
    </div>

    <!-- Submit Button -->
    <div class="pt-4">
        <input type="submit" value="Create List"
            class="w-full md:w-auto font-semibold bg-black text-white cursor-pointer hover:bg-gray-800 transition-colors p-3 px-8 rounded-lg text-lg">
    </div>
    </form>
    </div>
    </div>
</div>


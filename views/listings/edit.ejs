    <div class="bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-2xl md:text-3xl font-semibold text-center mb-8">Edit Your List</h1>
        
        <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-lg p-6 md:p-8">
            <form action="/listing/<%= list._id %>?_method=PUT" method="post" enctype="multipart/form-data" class="space-y-6">

                 Title Field 
    <div>
        <label class="block text-lg md:text-2xl font-semibold mb-2" for="title">Title</label>
        <input type="text" id="title"
            class="w-full rounded-lg p-3 border border-gray-200 shadow-sm h-12 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
            name="list[title]" value="<%= list.title %>">
        <div class="error-message hidden mt-1 text-sm text-red-600"></div>
        <div class="success-message hidden mt-1 text-sm text-green-600"></div>
    </div>

    <!-- Description Field -->
    <div>
        <label class="block text-lg md:text-2xl font-semibold mb-2" for="description">Description</label>
        <textarea name="list[description]" id="description"
            class="w-full rounded-lg p-3 border border-gray-200 shadow-sm min-h-[120px] focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors resize-vertical"><%= list.description %></textarea>
        <div class="error-message hidden mt-1 text-sm text-red-600"></div>
        <div class="success-message hidden mt-1 text-sm text-green-600"></div>
    </div>

    <!-- Category Field -->
    <div>
        <label class="block text-lg md:text-2xl font-semibold mb-2" for="category">Category</label>
        <select name="list[category]" required id="category" 
            class="w-full rounded-lg p-3 border border-gray-200 shadow-sm h-12 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors appearance-none bg-white">
            <option value="">Select a category</option>
            <option value="Trending" <%= list.category === 'Trending' ? 'selected' : '' %>>Trending</option>
            <option value="Iconic Cities" <%= list.category === 'Iconic Cities' ? 'selected' : '' %>>Iconic Cities</option>
            <option value="Mountains" <%= list.category === 'Mountains' ? 'selected' : '' %>>Mountains</option>
            <option value="Amazing Pools" <%= list.category === 'Amazing Pools' ? 'selected' : '' %>>Amazing Pools</option>
            <option value="Camping" <%= list.category === 'Camping' ? 'selected' : '' %>>Camping</option>
            <option value="Arctic" <%= list.category === 'Arctic' ? 'selected' : '' %>>Arctic</option>
            <option value="Castle" <%= list.category === 'Castle' ? 'selected' : '' %>>Castle</option>
            <option value="Rooms" <%= list.category === 'Rooms' ? 'selected' : '' %>>Rooms</option>
            <option value="Dome" <%= list.category === 'Dome' ? 'selected' : '' %>>Dome</option>
            <option value="Farm" <%= list.category === 'Farm' ? 'selected' : '' %>>Farm</option>
        </select>
        <div class="error-message hidden mt-1 text-sm text-red-600"></div>
        <div class="success-message hidden mt-1 text-sm text-green-600"></div>
    </div>

    <!-- Price and Country Fields -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
        <!-- Price Field -->
        <div>
            <label class="block text-lg md:text-2xl font-semibold mb-2" for="price">Price</label>
            <input type="text" name="list[price]" id="price"
                class="w-full rounded-lg p-3 border border-gray-200 shadow-sm h-12 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
                value="<%= list.price %>">
            <div class="error-message hidden mt-1 text-sm text-red-600"></div>
            <div class="success-message hidden mt-1 text-sm text-green-600"></div>
        </div>

        <!-- Country Field -->
        <div>
            <label class="block text-lg md:text-2xl font-semibold mb-2" for="country">Country</label>
            <input type="text" name="list[country]" id="country"
                class="w-full rounded-lg p-3 border border-gray-200 shadow-sm h-12 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
                value="<%= list.country %>">
            <div class="error-message hidden mt-1 text-sm text-red-600"></div>
            <div class="success-message hidden mt-1 text-sm text-green-600"></div>
        </div>
    </div>

    <div class="originalimage">
                    <label class="block text-lg md:text-2xl font-semibold mb-3">Original Image</label>
                    <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                        <img src="<%=list.image.url%>" 
                             alt="Current listing image" 
                             class="w-full max-w-sm mx-auto md:mx-0 h-48 md:h-64 object-cover rounded-lg shadow-md">
                        <p class="text-sm text-gray-600 mt-2 text-center md:text-left">Current image</p>
                    </div>
                </div>

    <!-- Image Upload Field -->
    <div>
        <h2 class="text-lg md:text-2xl font-semibold mb-2">Upload List Image</h2>
        <label for="file-input" class="sr-only">List Image</label>
        <input type="file" name="list[image]" id="file-input" class="block w-full border border-gray-200 shadow-sm rounded-lg text-sm focus:z-10 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none 
                        file:bg-gray-50 file:border-0 file:me-4 file:py-3 file:px-4 file:rounded-l-lg">
    </div>

    <!-- Location Field -->
    <div>
        <label class="block text-lg md:text-2xl font-semibold mb-2" for="location">Location</label>
        <input type="text" name="list[location]" id="location"
            class="w-full rounded-lg p-3 border border-gray-200 shadow-sm h-12 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors"
            value="<%= list.location %>">
        <div class="error-message hidden mt-1 text-sm text-red-600"></div>
        <div class="success-message hidden mt-1 text-sm text-green-600"></div>
    </div>

    <!-- Submit Button -->
    <div class="pt-4">
        <input type="submit" value="Submit"
            class="w-full md:w-auto font-semibold bg-black text-white cursor-pointer hover:bg-gray-800 transition-colors p-3 px-8 rounded-lg text-lg">
    </div>
    </form>
    </div>
    </div>
</div>
